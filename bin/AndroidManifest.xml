<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cm.babydiary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/elephant"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cm.babydiary.MilestoneActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.cm.babydiary.MainActivity"
            android:label="@string/log"
            android:parentActivityName="MilestoneActivity"
            android:screenOrientation="portrait">  
        </activity>
        
        
        <activity
            android:name="com.cm.babydiary.UserActivity"
            android:label="@string/log"
            android:parentActivityName="MilestoneActivity"
            android:screenOrientation="portrait">  
        </activity>
        
        <activity
            android:name="com.cm.babydiary.SignUpActivity"
            android:label="@string/sign"
            android:parentActivityName="MilestoneActivity"
            android:screenOrientation="portrait">  
        </activity>
    </application>

</manifest>
